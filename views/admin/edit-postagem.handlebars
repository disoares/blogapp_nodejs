{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action="/admin/postagens/edit" method="POST">
            <label for="titulo">Título: </label>
            <input type="hidden" name="id" id="id" value="{{postagem._id}}">
            <input type="text" name="titulo" id="titulo" class="form-control" value="{{postagem.titulo}}" required>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" id="slug" class="form-control" value="{{postagem.slug}}" required>
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" id="descricao" class="form-control" value="{{postagem.descricao}}"
                required>
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" id="conteudo" cols="30" rows="7" class="form-control"
                required>{{postagem.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" id="categoria" class="custom-select">
                <option value="0">-- Selecione uma opção --</option>
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{/each}}
            </select>
            <input type="submit" class="btn btn-primary mt-3" value="Editar Postagem" />
        </form>
    </div>
</div>