<h2>Lista de categorias</h2>
<hr>
<a class="btn btn-primary" href="/admin/add-categoria">Nova Categoria</a>

{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>{{slug}}</small><br>
        <div class="row">
            <a href="/admin/categorias/edit/{{_id}}" class="btn btn-primary mt-4 mr-4">Editar Categoria</a>
            <a href="/admin/categorias/delete/{{_id}}" class="btn btn-danger mt-4">Deletar Categoria</a>
        </div>
    </div>
</div>
{{else}}
<h4 class="mt-4">Nenhuma categoria cadastrada!</h4>
{{/each}}